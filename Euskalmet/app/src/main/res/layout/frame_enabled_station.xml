<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/cv_enabled" layout_height=""
        layout_width="">

    <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:orientation="horizontal"
    >

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="112dp" android:layout_weight="18" android:paddingBottom="25dp"
                android:paddingTop="25dp">
            <ImageView
                    android:layout_width="62dp"
                    android:layout_height="54dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="false"
                    android:layout_centerVertical="true"
                    android:id="@+id/enabledStationImgView" card_view:srcCompat="@drawable/beacon"
                    tools:srcCompat="@drawable/beacon"/>
            <TextView
                    android:id="@+id/enabledStationTextView"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-40dp"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:baselineAligned="false" android:layout_weight="18"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textAlignment="center"/>
            <TextView
                    android:id="@+id/readingsTextView"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="5dp"
                    android:layout_width="150dp"
                    android:layout_height="71dp"
                    android:background="@drawable/border_radius"
                    android:baselineAligned="false" android:layout_weight="18"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:autoText="false"
                    android:clickable="false" android:editable="false" android:fontFamily="sans-serif"
                    android:isScrollContainer="false" android:textSize="14sp" android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:textAlignment="center"
                    android:foregroundGravity="center_vertical|center|center_horizontal"
                    android:textColor="#efe5fd" android:shadowColor="@color/white"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>