<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/cv" layout_height=""
        layout_width="">

    <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:orientation="horizontal"
    >

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="18">
            <ImageView

                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_margin="20dp"
                    android:layout_gravity=""
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="false"
                    android:layout_centerVertical="true"
                    android:id="@+id/stationImgView" card_view:srcCompat="@drawable/beacon"
                    tools:srcCompat="@drawable/beacon"/>
            <TextView
                    android:id="@+id/stationTextView"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="118dp"
                    android:layout_height="35dp"
                    android:baselineAligned="false" android:layout_weight="18"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_height="wrap_content" android:id="@+id/stationSwitch" android:minWidth="48dp"
                    android:minHeight="48dp" android:rotation="-91"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>